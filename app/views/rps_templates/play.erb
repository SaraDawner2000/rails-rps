<h2>We played <%=@player_choice%>!</h2>
<h2>They played <%=@computer_choice%>!</h2>
<%if @player_choice == "paper"%>
  <%if @computer_choice == "rock"%>
    <h2>We won!</h2>
  <%elsif @computer_choice == "scissors"%>
    <h2>We lost!</h2>
  <%else%>
    <h2>We tied!</h2> 
  <%end%>
<%elsif @player_choice == "rock"%>
  <%if @computer_choice == "scissors"%>
    <h2>We won!</h2>
  <%elsif @computer_choice == "paper"%>
    <h2>We lost!</h2>
  <%else%>
    <h2>We tied!</h2> 
  <%end%>
<%else%>
  <%if @computer_choice == "paper"%>
    <h2>We won!</h2>
  <%elsif @computer_choice == "rock"%>
    <h2>We lost!</h2>
  <%else%>
    <h2>We tied!</h2> 
  <%end%>
<%end%>
